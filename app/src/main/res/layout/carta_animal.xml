<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    app:cardBackgroundColor="#DCDCDC"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_nombreAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Nombre del Animal"
            android:paddingTop="5dp"
            />
        <TextView
            android:id="@+id/tv_tipoAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Tipo de Animal"
            android:paddingTop="5dp"
            />
        <TextView
            android:id="@+id/tv_razaAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Raza del Animal"
            android:paddingTop="5dp"
            />
        <TextView
            android:id="@+id/tv_usuarioAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Usuario relacionado con el Animal"
            android:paddingTop="5dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>