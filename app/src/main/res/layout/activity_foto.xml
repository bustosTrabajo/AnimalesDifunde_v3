<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FotoActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="REGISTRAR NUEVO ANIMAL"
        />
    <TextView
        android:id="@+id/paso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text="PASO 3 DE 3 "
        />

    <TextView
        android:id="@+id/txtFotoAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="REALIZA UNA FOTO A TU ANIMAL"
        />

    <ImageView
        android:id="@+id/ivFotoAnimal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/icono_camara" />

    <Button
        android:id="@+id/btnFotoAnimal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#A8A8A8"
        android:text="Subir Foto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >
        <ImageButton
            android:id="@+id/btnAnterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:backgroundTint=" #4CAF50"
            app:srcCompat="@drawable/ic_anterior" />

        <ImageButton
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:backgroundTint=" #4CAF50"
            app:srcCompat="@drawable/ic_siguiente" />
    </LinearLayout>

</LinearLayout>