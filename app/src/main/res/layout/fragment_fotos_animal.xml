<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FotosAnimalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="GALERIA"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
         >

            <ImageView
                android:id="@+id/btnSubirNuevoAnimal"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_camara_menu"
                tools:srcCompat="@drawable/ic_camara_menu" />

            <TextView
                android:id="@+id/txtAÃ±adirNuevoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Subir nueva foto de animal " />

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
                />
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
             />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
                 />
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
           />
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
            />
            <ImageView
                android:id="@+id/iv6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginRight="5dp"
                android:foreground="@drawable/fotoperro"
            />
        </GridLayout>
    </RelativeLayout>
</FrameLayout>